<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"
            integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
            integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
            crossorigin="anonymous"></script>
    <title>Document</title>
</head>
<body>
    @using (Html.BeginForm())
    {

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">ENTER INFORMATION TO REGIST AN COURSE</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">Identificate Information</div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <form role="form">
                                        <div class="form-group">
                                            <label>Full Name</label>
                                            <input class="form-control" type="text" name="txt_FullName" />
                                            <p class="help-block">Nhập họ tên Đầy đủ, Capital từng từ</p>
                                        </div>
                                        <div class="form-group">
                                            <label>ID Student</label>
                                            <input class="form-control"
                                                   placeholder="Enter text"
                                                   type="text"
                                                   name="txt_ID" />
                                        </div>
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input class="form-control"
                                                   placeholder="email@example.com"
                                                   type="text"
                                                   name="txt_Email" />
                                        </div>
                                        <div class="form-group">
                                            <label>File Image input </label>
                                            <input type="file" name="File_Image" />
                                        </div>
                                        <div class="form-group">
                                            <label>Note </label>
                                            <textarea class="form-control" rows="3" name="t_Note"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>We are Known by</label>
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" value="Television" name="Chk1" />Television
                                                </label>
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" value="Website" name="Chk2" />Website
                                                </label>
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" value="NewsPaper" name="Chk3" />NewsPaper
                                                </label>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label>Choose Work Study</label>
                                            <div class="radio">
                                                <label>
                                                    <input type="radio"
                                                           name="optRadios"
                                                           id="optionsRadios1"
                                                           value="1"
                                                           checked />Morning (2 - 4 - 6)
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label>
                                                    <input type="radio"
                                                           name="optRadios"
                                                           id="optionsRadios2"
                                                           value="2" />Afternoon (2 - 4 - 6)
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label>
                                                    <input type="radio"
                                                           name="optRadios"
                                                           id="optionsRadios3"
                                                           value="3" />Morning (3 - 5 - 7)
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label>
                                                    <input type="radio"
                                                           name="optRadios"
                                                           id="optionsRadios4"
                                                           value="4" />Afternoon (3 - 5 - 7)
                                                </label>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label>Selects an course </label>
                                            <select class="form-control" name="sc">
                                                <option value="1">1. Html CSS Boottrap</option>
                                                <option value="2">2. JavaScript</option>
                                                <option value="3">3. WebForm</option>
                                                <option value="4">4. ASP.Net MVC</option>
                                                <option value="5">5. Web Services</option>
                                            </select>
                                        </div>

                                        <button type="submit" class="btn btn-default">Submit Button</button>
                                        <button type="reset" class="btn btn-default">Reset Button</button>
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

        <script src="~/Assets/js/jquery-1.10.2.js"></script>
        <script src="~/Assets/js/bootstrap.min.js"></script>
        <script src="~/Assets/js/plugins/metisMenu/jquery.metisMenu.js"></script>

        <!-- Page-Level Plugin Scripts - Forms -->

        <!-- SB Admin Scripts - Include with every page -->
        <script src="~/Assets/js/sb-admin.js"></script>

        <!-- Page-Level Demo Scripts - Forms - Use for reference -->
    }
</body>
</html>
